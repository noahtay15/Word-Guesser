<Page x:Class="Word_Guesser.QuestionsScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Word_Guesser"
        mc:Ignorable="d"
        Title="QuestionsScreen" Background="#002">
    <Grid>
        <Grid Margin="28,30,28,92" x:Name="QuestionBoxGrid">
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
			<Border Grid.Row="0" Grid.Column="0" CornerRadius="10" Background="Gray" >
				<TextBlock Text="Category" FontSize="10" HorizontalAlignment="Center" VerticalAlignment="Center">
					
				</TextBlock>
			</Border>

			<Button Grid.Row="1" Grid.Column="0" Width="Auto" Height="Auto" Background="LightBlue" Content="Click Me">
				<Button.Resources>
					<Style TargetType="Border">
						<Setter Property="CornerRadius" Value="5"/>
					</Style>
				</Button.Resources>
			</Button>
        </Grid>
        <Grid Margin="0,363,0,0" x:Name="PlayerPodiumGrid">
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
        </Grid>
        <Button Name="BackToPlayerInitButton"
            Content="Back" 
            HorizontalAlignment="Left" 
            VerticalAlignment="Bottom" 
            Height="33" 
            Width="60"
            Cursor="Hand"
            Click="BackToPlayerInitButton_Click" 
            Margin="10,0,0,6"
            MouseEnter="BackToPlayerInitButton_MouseEnter"
            MouseLeave="BackToPlayerInitButton_MouseLeave">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Grid>
                        <Ellipse x:Name="BackToPlayerInitButtonEllipse" Fill="LightBlue" Width="60" Height="30" Stroke="Black" StrokeThickness="4"/>
                        <ContentPresenter x:Name="BackToPlayerInitButtonContentPresenter" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Grid>
                </ControlTemplate>
            </Button.Template>
        </Button>
    </Grid>
</Page>

<Page x:Class="Word_Guesser.QuestionsScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Word_Guesser"
        mc:Ignorable="d"
        Title="QuestionsScreen" Background="#002">

    <Page.Resources>
        <Style x:Key="NoMouseOverColorButton" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Viewbox Stretch="Uniform">
        <Grid>
            <Grid Margin="28,30,28,92" x:Name="QuestionBoxGrid">
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Border Grid.Row="0" Grid.Column="0" CornerRadius="5" Background="LightGray" BorderBrush="#6a6a6a" BorderThickness="1" Height="35" Width="50">
                    <TextBlock Text="Category" FontSize="10" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock.Foreground>
                            <SolidColorBrush Color="Black"/>
                        </TextBlock.Foreground>
                    </TextBlock>
                </Border>
                <Button Grid.Row="1" Grid.Column="0" Width="50" Height="35" Background="DarkBlue" BorderBrush="Blue" x:Name="Button01" MouseEnter="Button_MouseEnter" MouseLeave="Button_MouseLeave" Style="{StaticResource NoMouseOverColorButton}">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </Button.Resources>
                    <TextBlock Text="Question 1" FontSize="9">
                        <TextBlock.Foreground>
                            <SolidColorBrush Color="Gold"/>
                        </TextBlock.Foreground>
                        <TextBlock.Effect>
                            <DropShadowEffect Color="Black" ShadowDepth="0" BlurRadius="5" Opacity="1" />
                        </TextBlock.Effect>
                    </TextBlock>
                </Button>
            </Grid>
            <Button Name="BackToPlayerInitButton"
            Content="Back" 
            HorizontalAlignment="Left" 
            VerticalAlignment="Bottom" 
            Height="33" 
            Width="60"
            Cursor="Hand"
            Click="BackToPlayerInitButton_Click"
            MouseEnter="BackToPlayerInitButton_MouseEnter"
            MouseLeave="BackToPlayerInitButton_MouseLeave">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Ellipse x:Name="BackToPlayerInitButtonEllipse" Fill="LightBlue" Width="60" Height="30" Stroke="Black" StrokeThickness="4"/>
                            <ContentPresenter x:Name="BackToPlayerInitButtonContentPresenter" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Grid>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </Grid>
    </Viewbox>
</Page>
